<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationsActivity">

    <ScrollView
        android:id="@+id/notificationsBackgroundScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/menuButton"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Menu" />

                <TextView
                    android:id="@+id/titleTextSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Notifications"
                    android:textAlignment="textEnd"
                    android:textSize="24sp" />

            </LinearLayout>

            <Button
                android:id="@+id/silentNotosButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Silent Mode: " />

            <TextView
                android:id="@+id/savedNotosTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saved Notifications: "
                android:textAlignment="center" />

            <TextView
                android:id="@+id/infoTextNoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click bus to change notifications!"
                android:textAlignment="center" />

            <ListView
                android:id="@+id/notificationsListView"
                android:layout_width="match_parent"
                android:layout_height="582dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>